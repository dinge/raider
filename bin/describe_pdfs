#!/usr/bin/env ruby
# frozen_string_literal: true

begin
  require 'bundler/setup'
  require 'slop'
  lib_path = File.expand_path('../lib', __dir__)
  $LOAD_PATH.unshift(lib_path) unless $LOAD_PATH.include?(lib_path)

  require 'raider'

  options = Slop.parse do |o|
    o.banner = 'Usage: ruby describe_pdf.rb [PDF_FILE] [options]'
    o.bool '-h', '--help', 'Show help', default: false
    o.bool '-d', '--debug', 'Show/hide analysis details', default: false
    o.string '-p', '--provider', "LLM provider (#{Raider::Providers::Base.available.join('/')})", default: 'open_ai'
    o.string '-l', '--llm', "LLM (#{Raider::Llms::Base.available.join('/')})"
    o.integer '--dpi', 'DPI for PDF conversion', default: 200
  end

  if options[:help]
    puts options
    exit 1
  end

  input_directory = options.arguments.first || raise('Please provide a PDF file path')
  raise "File not found: #{input_directory}" unless File.exist?(input_directory)

  Raider::Apps::DescribePdfs.new(options.to_h.merge(input_directory:)).process
rescue StandardError => e
  puts "Error: #{e.class} - #{e.message}"
  puts e.backtrace
  exit 1
end
