#!/usr/bin/env ruby
# frozen_string_literal: true

require "bundler/inline"

gemfile(false) do
  gem "langchainrb"
  gem "ruby-vips"
  gem "pdf-reader"
  gem "base64"
  gem "json"
  gem "activesupport"
  gem "debug"
  gem "faraday"
  gem "ruby-openai"
end

$LOAD_PATH.unshift File.expand_path('../lib', __dir__)
require 'rename_pdfs'
require 'config'

config = Raider::Config.from_args
Raider::RenamePdfs.new(config).run